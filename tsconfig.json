{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "src/**/**/*.ts",
        "server/**/*.ts",
        "server/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true,
    "buildOnSave": true
    
}
